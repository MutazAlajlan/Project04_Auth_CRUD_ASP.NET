@{
    ViewData["Title"] = "Rooms Page";
    var rooms = (List<RoomModel>)ViewData["Rooms"];
    int counter = 1;
}
<div class="container">
    <div class="row">
        @foreach (var room in rooms)
        {
            if (counter % 2 == 0)
            {
                <div class="row"> </div>
            }
            <div class="col">
                <div class="card border-dark text-center" style="margin-top:1rem; margin-bottom:1rem;">
                    <div class="card-header" style="background-color:#f8edeb">
                        <strong> @room.Name </strong>
                    </div>
                    <div class="card-img-top">
                        <img src=@room.Image style="width:520px; height:300px" alt=@room.Name/>

                    </div>
                    <div class="card-footer" style="background-color: #e8e8e4">
                        <p> @room.Description</p>
                        
                        <hr />
                        <div style="background-color: #ece4db">
                            <p>Available facilities:</p>

                            <p style="font-size: large; font-weight:500">@room.Facility.Name</p>
                            <a class="stretched-link" asp-area="" asp-controller="Rooms" asp-action="Details" asp-route-id=@room.Id >Room details </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>